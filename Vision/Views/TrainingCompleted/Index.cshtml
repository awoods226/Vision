@model IEnumerable<Vision.ViewModels.Currency>

@{
    ViewBag.Title = "Index";
}

<h2>Currency Status</h2>

<table class="table">
    <tr>
        <th>
            Event
        </th>
        <th>
           Next Date Due
        </th>
        <th>
            Amount Remaining
        </th>
        <th>
            Date Last Completed
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(m => item.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NextDateDue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountRemaining)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateLastCompleted)
        </td>
        <td>
            @Html.DisplayFor(m => item.currencyStatus)
        </td>
    </tr>
}

</table>
